

<h3><%=@claimer.proper_name%> claimed your request at <%=@post.street_1%></h3>


<h5>Address</h5>
<p><%= @post.street_1 %></p>
<% unless @post.street_2.empty? %>
	<p><%= @post.street_2 %></p>
<% end %>
<p>
	<%= "#{@post.city}, #{@post.state} #{@post.zip}" %>
</p>

<h5>Number of People</h5>
<p><%= @post.number_people %></p>

<h5>Comment</h5>
<p>
	<%@post.comments.each do |comment| %>
	   <%="#{comment.poster}: "%>
	   <%=comment.content%>
    <%end%>
</p>


<h5>Reported Needs</h5>
<% unless @post_needs.empty? %>
	<ul>
		<% @post_needs.each do |pn| %>
			<li><%= pn.need.name %></li>
		<% end %>
	</ul>
<% else %>
	<p><i>No Needs Registered</i></p>
<% end %>

<%= link_to 'View Post', @post %>
