<div id="profile-header">
	<h2><%= @user.proper_name %></h2>
	<p>
		<%= @user.job_title%> 
		<% if @organization %>
			at <%= link_to @organization.name, organization_path(@organization) %>
		<% end %>
	</p>

	<small>
		<%= @user.email %> | <%= @user.phone %><br/><br/>
		<%= link_to "Edit Profile", edit_user_path(@user) %>
	</small>
</div>

<h3>Posted Requests</h3>
<div><%= render partial: "partials/post_table", locals: { post_details: @post_details } %></div>

<h3>Claimed Requests</h3>
<div><%= render partial: "partials/post_table", locals: { post_details: @claimed_post_details } %></div>

<hr/>