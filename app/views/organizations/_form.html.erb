<%= simple_form_for @organization, html: { class: 'form-horizontal', multipart: true } do |f| %>
       
    <%= f.input :name, input_html: {class: "form-control"}, wrapper_html: {class: 'form-group'} %>

    <% if logged_in? and current_user.role? :admin %>
	    <%= f.label :active %>
	    <%= f.input_field :active, as: :boolean, boolean_style: :inline %>
	  <% end %>

    <%= f.label :Alliance %>
    <%= f.collection_select :alliance_id, @alliances, :id, :name, prompt: true %>
    <br/>
    <%= link_to "New Alliance", new_alliance_path %>
    <br/>
     
    <button type="submit" class="btn btn-submit btn-primary">Submit</button>

    




<% end %>